<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SignUpActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <EditText
            android:id="@+id/txtSignUpName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="18"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:hint="@string/txtUserName"
            android:importantForAutofill="no"
            android:inputType="textPersonName"
            android:textColorHint="#A47551"
            tools:ignore="TouchTargetSizeCheck,TextContrastCheck" />

        <EditText
            android:id="@+id/txtSignUpAddress"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:ems="18"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:hint="@string/txtAddress"
            android:importantForAutofill="no"
            android:inputType="textPersonName"
            android:textColorHint="#A47551"
            tools:ignore="TouchTargetSizeCheck,TextContrastCheck" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:padding="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/lblGenre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txtInterestedGenre"
            android:layout_weight="1"
            android:textColor="#A47551"
            android:textSize="18sp"
            tools:ignore="TextContrastCheck" />

        <Spinner
            android:id="@+id/spGenre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:entries="@array/groups"
            android:scrollbarSize="6dp"
            tools:ignore="TouchTargetSizeCheck" />
    </LinearLayout>
    <Button
        android:id="@+id/btnSignUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:backgroundTint="#A47551"
        android:text="@string/btnSignUp"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:padding="20dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/bllHasAccount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txtHadAccount"
            android:layout_weight="1"
            android:textColor="#A47551"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btnLogIn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#A47551"
            android:layout_weight="1"
            android:text="@string/btnLogin"
            android:textColor="@color/white"
            android:textSize="20sp" />
    </LinearLayout>


</LinearLayout>