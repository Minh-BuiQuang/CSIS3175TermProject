<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="3dp"
    app:cardCornerRadius="3dp"
    app:cardUseCompatPadding="true"
    app:cardBackgroundColor="@color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:weightSum="10">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="8">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:textAlignment="viewEnd"
                    android:text="@string/txtUserName"
                    android:layout_margin="5dp"/>
                <TextView
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:id="@+id/textview_username"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:textAlignment="viewEnd"
                    android:text="@string/txtPhone"
                    android:layout_margin="5dp"/>
                <TextView
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:id="@+id/textview_phone"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:textAlignment="viewEnd"
                    android:text="@string/txtAddress"
                    android:layout_margin="5dp"/>
                <TextView
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:id="@+id/textview_address"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center">

            <Button
                android:id="@+id/edit_btn"
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:contentDescription="@string/edit_txt"
                app:icon="@android:drawable/ic_menu_edit"
                app:iconGravity="textStart"
                app:iconPadding="0dp"
                app:iconSize="15dp"
                app:iconTint="@color/white" />

            <Button
                android:id="@+id/accept_btn"
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:contentDescription="@string/accept_button_text"
                app:icon="@drawable/ok_icon"
                app:iconGravity="textStart"
                app:iconPadding="0dp"
                app:iconSize="30dp"
                app:iconTint="@color/white"
                android:visibility="gone"/>

            <Button
                android:id="@+id/message_btn"
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:contentDescription="@string/edit_txt"
                app:icon="@android:drawable/stat_notify_chat"
                app:iconGravity="textStart"
                app:iconPadding="0dp"
                app:iconSize="15dp"/>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView >