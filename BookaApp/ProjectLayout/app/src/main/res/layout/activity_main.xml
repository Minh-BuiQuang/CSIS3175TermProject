<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:weightSum="5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="*"
        android:layout_weight="0.4">

        <ImageView
            android:id="@+id/imageView"
            android:background="#E4D4C8"
            android:layout_width="wrap_content"
            android:layout_height="56dp"
            app:srcCompat="@drawable/icon" />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="*"
        android:layout_weight="2.6"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:fontFamily="@font/roboto_medium"
            android:text="BOOKA"
            android:textAlignment="center"
            android:textColor="#523A28"
            android:textSize="54sp" />

        <TextView
            android:id="@+id/txtSignIn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto"
            android:text="Sign in to share your book"
            android:textAlignment="center"
            android:textColor="#523A28"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btnSignIn"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_medium"
            android:text="Sign In"
            android:textColor="#A47551"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/txtSignUp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto"
            android:text="Don't have an account?"
            android:textAlignment="center"
            android:textColor="#523A28"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btnSignUp"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_medium"
            android:text="SIGN UP"
            android:textColor="#A47551"
            android:textSize="24sp" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="*"
        android:background="##478C5C"
        android:layout_weight="0.3"
        android:weightSum="10">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="*"
        android:background="##478C5C"
        android:layout_weight="1.3"
        android:weightSum="10">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/welcomeImg" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="*"
        android:background="##478C5C"
        android:layout_weight="0.2"
        android:weightSum="10">

        <TextView
            android:id="@+id/txtFooter"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Copyright @BookaTeam"
            android:textAlignment="center"
            android:textColor="#523A28"
            android:textSize="16sp" />



    </LinearLayout>
</LinearLayout>

